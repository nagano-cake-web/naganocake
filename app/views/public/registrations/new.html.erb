<div class="container px-5 px-sm-0">
  <div class="row my-sm-3">
    <h2>新規会員登録</h2>
  </div>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-lg-8">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>名前</td>
                <td>
                  <%= f.label :last_name, "(姓)" %>
                  <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
                </td>
                <td>
                  <%= f.label :first_name, "(名)" %>
                  <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
                </td>
              </tr>
              <tr>
                <td>フリガナ</td>
                <td>
                  <%= f.label :last_name_kana, "(セイ)" %>
                  <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
                </td>
                <td>
                  <%= f.label :first_name_kana, "(メイ)" %>
                  <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
                </td>
              </tr>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
                </td>
                <td></td>
              </tr>
              <tr>
                <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
                <td><%= f.text_field :postal_code, autofocus: true, placeholder: "000000" %></td>
                <td></td>
              </tr>
              <tr>
                <td><%= f.label :address, "住所" %></td>
                <td><%= f.text_field :address, :size => "30*30", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
                <td></td>
              </tr>
              <tr>
                <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
                <td><%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %></td>
                <td></td>
              </tr>
              <tr>
                <td><% if @minimum_password_length %>
                      <em>パスワード(<%= @minimum_password_length %>文字以上)</em>
                    <% end %><br />
                </td>
                <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                <td></td>
              </tr>
              <tr>
                <td><%= f.label :password_confirmation, "パスワード(確認用)" %><br /></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                <td></td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
                <td></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  <h2>既に登録済みの方</h2>
  <p>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。
  </p>
</div>
