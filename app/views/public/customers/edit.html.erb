<div class="container px-5 px-sm-0">
  <div>
    <h2>会員情報編集</h2>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
          <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.label :"氏名" %></td>
              <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td><%= f.label :"フリガナ" %></td>
              <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><%= f.label :"郵便番号" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :"住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :"電話番号" %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :"メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
          </tbody>
      </table>
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      <%= link_to "退会する", unsubscribe_path(current_customer.id), class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>