<div class="container px-5 px-sm-0">
  <div>
    <h2>会員情報編集</h2>
  </div>

  <div>
    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <div>
        <%= f.label :氏名 %>
        <%= f.text_field :last_name %> <%= f.text_field :first_name %>
      </div>
      <div>
      <h4>フリガナ</h4>
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
      </div>
      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>
      <h4>電話番号</h4>
      <%= f.text_field :telephone_number %>
      <h4>メールアドレス</h4>
      <%= f.text_field :email %>
      <div>
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%= link_to "退会する", unsubscribe_path(current_customer.id), class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>