<div class="container px-5 px-sm-0">
<h2>注文情報入力</h2>
  <% form_with model: @order, url: orders_comfirm_path do |f| %>
  <div>支払方法
    <div>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
    </div>
  </div>

  <div>お届け先
    <div>
      <%= f.radio_button :address_number, current_customer.address.key(0) %>
      <%= f.label :address_number, current_customer.address_i18n[:customer_address] %>
      〒<%= current_customer.customer.postal_code %><%= current_customer.customer.address %>
      <%= current_customer.customer.last_name %><%= current_customer.customer.first_name %>
    </div>
    <div>
      <%= f.radio_button :address %>
      <%= f.label :address, "登録済住所から選択" %>
      <%= f.hidden_field :address, :value => order.id %>
      <%= f.select :address_id , options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
    <div>
      <%= f.label :address, "新しいお届け先" %>
      <% form_with model: @order do |f| %>
        <%= f.text_field :postal_code %>
        <%= f.text_field :address %>
        <%= f.text_field :name %>
      <% end %>
    </div>
    <%= f.submit "確認画面へ進む" %>
  <% end %>
  </div>
</div>