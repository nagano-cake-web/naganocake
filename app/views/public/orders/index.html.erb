<div class="container px-5 px-sm-0">
  <div>
    <h2>注文履歴一覧</h2>
  </div>
  <table class="table table-bordered align-middle">
    <thead>
      <tr class="table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <th><%= order.address %></th>
            <th><%= order.name %></th>
            <th><%= order.total_payment %></th>
            <th><%= link_to "表示する", order_show_path(@order), class: "btn btn-primary" %></th>
          </tr>
        <% end %>
        </tr>
      </tbody>
    </thead>
  </table>
</div>