<div class="container px-5 px-sm-0">
<h4>注文履歴詳細</h4>

  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
          <tbody>
            <tr>
              <td>購入者</td>
              <td><%= @order.name %></td>
            </tr>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.to_s(:datetime_jp) %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td><%= @order.address %></td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td>
                <% if @order.payment_method == "credit_card" %>
                  クレジットカード
                <% else %>
                  銀行振込
                <% end %>
              </td>
            </tr>
          </tbody>
        </thead>
      </table>
    </div>
  </div>

  <div class="row">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order_details.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.item.name %></td>
            <td><%= order.item.add_tax_price %></td>
            <td><%= order.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total += order.subtotal %>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <div class="row">
    <div class="col-lg-3">
    <%# @order.each do |order| %>
    <p>商品合計<%#= Order_datails.item.subtotal %></p>
    <%# @total += Order_datails.subtotal %>
    <%# end %>
    <p>送料<%= @order.shipping_cost %></p>
    <p>請求金額合計</p>
    </div>
  </div>

</div>