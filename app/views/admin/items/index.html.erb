<div class="container px-5 px-sm-0">
  <table class="table table-bordered">
    <thead>
      <tr class="table-secondary">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <th><%= item.id %></th>
      <th>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
        </th>
      <th><%= item.price %></th>
      <th><%= item.genre_id %></th>
    </tbody>
    <% end %>
  </table>
</div>