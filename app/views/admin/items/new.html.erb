<div class="container px-5 px-sm-0">
  <h1>商品新規登録</h1>

  <%= form_with model: @item, url:'/admin/items' do |f| %>
    
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
    <h4>商品名</h4>
    <%= f.text_field :name %>
    <h4>商品説明</h4>
    <%= f.text_area :introduction %>
    <h4>ジャンル</h4>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
    <h4>税抜価格</h4>
    <%= f.text_field :price %>円
    <h4>販売ステータス</h4>
    <%= f.label :is_active, '販売中', value: 0 %>
    <%= f.radio_button :is_active, '0' %>
    <%= f.label :is_active, '販売停止中', value: 1 %>
    <%= f.radio_button :is_active, '1' %>
    <%= f.submit '新規登録' %>
  <% end %>
</div>