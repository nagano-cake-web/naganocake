<div class="container px-5 px-sm-0">
  <h1>商品新規登録</h1>
  <table class="table table-borderless">
    <%= form_with model: @item, url:'/admin/items' do |f| %>
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :image, "商品画像" %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :introduction, "商品説明" %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label :genre, "ジャンル" %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
        </tr>
        <tr>
          <td><%= f.label :price, "税抜価格" %></td>
          <td><%= f.text_field :price %>円</td>
        </tr>
       </tbody>
  </table>
  <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>
</div>