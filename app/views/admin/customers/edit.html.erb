<div class="container px-5 px-sm-0">
  <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= f.text_field :last_name %> <%= f.text_field :first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= f.text_field :postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= f.text_field :address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= f.text_field :telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= f.text_field :email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th><%= f.radio_button :is_active, Customer.is_actives.key(0) %>
                <%= f.label :is_active, Customer.is_actives_i18n[:true] %>
                <%= f.radio_button :is_active, Customer.is_actives.key(1) %>
                <%= f.label :is_active, Customer.is_actives_i18n[:false] %>
            </th>
          </tr>
        </tbody>
      </table>
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
