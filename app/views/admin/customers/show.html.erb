<div class="container px-5 px-sm-0">
  <h1><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %> <%= @customer.first_name %></th>
      </tr>
    </tbody>
  </table>
  <h4>フリガナ</h4>
  <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
  <h4>郵便番号</h4>
  <%= @customer.postal_code %>
  <h4>住所</h4>
  <%= @customer.address %>
  <h4>電話番号</h4>
  <%= @customer.telephone_number %>
  <h4>メールアドレス</h4>
  <%= @customer.email %>
  <h4>会員ステータス</h4>
  <%= @customer.is_active %>
  <%= link_to '編集する', edit_admin_customer_path(@customer.id) %>
  <%= link_to '注文履歴一覧を見る', admin_path %>
</div>