<div class="container px-5 px-sm-0">
  <h4>注文履歴一覧</h4>

  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.to_s(:datetime_jp) %></td>
          <td><%= order.name %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>