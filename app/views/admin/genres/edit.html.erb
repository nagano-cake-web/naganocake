<div class="container px-5 px-sm-0">
  <h2 class="row">ジャンル編集</h1>

  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <%= f.label :genre, "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    <% end %>
  </div>
</div>