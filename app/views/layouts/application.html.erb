<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <div class="navbar-brand">
            <span class="border border-dark">LOGO</span>
          </div>
          <% if customer_signed_in? %>
          <div>ようこそ、<%= current_customer.last_name %>さん！</div>
          <% end %>
          <div class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
            <div class="row">
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("マイページ", customer_show_path(current_customer.id), class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("商品一覧", items_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("カート", cart_items_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("ログアウト", destroy_customer_session_path, method: :delete, class: 'text-dark') %>
              </li>
              <% elsif  admin_signed_in? %>
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("商品一覧", admin_items_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("会員一覧", admin_customers_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("注文履歴一覧", admin_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("ジャンル一覧", admin_genres_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("ログアウト", destroy_admin_session_path, method: :delete, class: 'text-dark') %>
              </li>
              <% else %>
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("About", about_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("商品一覧", items_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("新規登録",  new_customer_registration_path, class: 'text-dark') %>
              </li>
              &emsp;
              <li class="nav-item btn btn-outline-dark">
                <%= link_to("ログイン", new_customer_session_path, class: 'text-dark') %>
              </li>
            <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
