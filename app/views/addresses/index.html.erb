<h2>配送先登録/一覧</h2>
<div>
  <%= form_with model: @address |f| %>
  <h4>郵便番号(ハイフンなし)</h4>
  <%= f.text_field :postal_code %>

  <h4>住所</h4>
  <%= f.text_field :address %>

  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
</div>

<div>
  <div>
    <p>郵便番号</p>
    <p>住所</p>
    <p>宛名</p>
    <p></p>
  </div>

  <div>
    <%= @addresses.postal_code %>
    <%= @addresses.address %>
    <%= @addresses.name %>
    <%= link_to "編集する", edit_addresses_path %>
    <%= link_to "削除する", path(@address.id), method: :delete %>
  </div>
</div>